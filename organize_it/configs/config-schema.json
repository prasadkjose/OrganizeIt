{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "title": "config-schema.json5",
    "properties": {
        "source": {
            "type": "string"
        },
        "destination": {
            "type": "string"
        },
        "rules": {
            "type": "object",
            "description": "Rule definitions",
            "properties": {
                "format": { "$ref": "#/$defs/format" },
                "name": {
                    "type": "object",
                    "description": "Organize by file or directory name (using a prefix or pattern. It takes precedence over format",
                    "patternProperties": {
                        "^[a-z0-9]+$": {
                            "type": "object",
                            "description": "Desitnation directory name within the global destination source",
                            "properties": {
                                "name_pattern": {
                                    "description": "Regex if matched, will move/copy the files/dirs to the destination",
                                    "type": "string"
                                }
                            }
                        }
                    }
                },
                "skip": {
                    "type": "object",
                    "description": "File System objects to skip.",
                    "properties": {
                        "dir": {
                            "description": "Regex if matched, will skip the file matching the pattern.",
                            "type": "string"
                        },
                        "files": {
                            "description": "Regex if matched, will skip the file matching the pattern.",
                            "type": "string"
                        }
                    }
                }
            },
            "required":[ "format" ] 
        }
    },
    "additionalProperties": false,
    "$defs": {
         "format": {
            "type": "object",
            "patternProperties": {
                "^[a-z0-9]+$": {
                    "type": "object",
                    "properties": {
                        "types": {
                            "type": "array"
                        },
                        "format": { "$ref": "#/$defs/format" }
                    }
                }
            }
        }
    }
}